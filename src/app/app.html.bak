<ion-menu [content]="content" swipeEnabled="false">
  <ion-header>
    <ion-toolbar>
      <ion-title></ion-title>
    </ion-toolbar>
  </ion-header>

  <ion-content *ngIf="userProfiles">
    <ion-list>
	   <ion-item *ngIf="userProfiles">
      <ion-avatar item-start>
          <ion-list style="margin:15px 0 0 0;font-family: Arial ">
         <div *ngIf="userProfiles.photoURL" class="profile-image">
            <img src="{{userProfiles.photoURL}}" width="80" height="80" style="display: block; margin-left: auto; margin-right: auto;">
         </div>
         <div *ngIf="!userProfiles.photoURL" class="profile-image">
            <img src="{{values.avatar}}" width="80" height="80" style="display: block; margin-left: auto; margin-right: auto;">
         </div>
      </ion-list>
      </ion-avatar>
      <h2>{{userProfiles.displayName}}</h2>
      
    </ion-item>
	
	
      <button menuClose ion-item *ngFor="let p of pages" (click)="openPage(p)">
		<ion-icon [name]="p.icon" item-left></ion-icon>
        {{ p.title }}
      </button>
	  
	  <button menuClose ion-item  (click)="logOut()">
	  <ion-icon [name]="exit" item-left></ion-icon>
        Log Out
      </button>
    </ion-list>
  </ion-content>

</ion-menu>

<!-- Disable swipe-to-go-back because it's poor UX to combine STGB with side menus -->
<ion-nav [root]="rootPage" #content swipeBackEnabled="false"></ion-nav>